#!/usr/bin/env bash

dartInstallationPath=$(which dart)
echo "found dart installion in $dartInstallationPath"

##### Flutter formatter
printf "\n"
printf "\e[33;1m%s\e[0m\n" 'Running the Dart formatter'
"$dartInstallationPath" format ./lib/


##### Flutter analyzer
printf "\n"
printf "\e[33;1m%s\e[0m\n" 'Running the Dart analyzer'
"$dartInstallationPath" analyze ./lib/
if [ $? -ne 0 ]; then
  printf "\e[31;1m%s\e[0m\n" 'Dart analyzer error'
  exit 1
fi

##### Unit tests
printf "\n"
printf "\e[33;1m%s\e[0m\n" 'Running unit tests'
"$dartInstallationPath" run test
if [ $? -ne 0 ]; then
 printf "\e[31;1m%s\e[0m\n" 'Unit tests failed'
 exit 1
fi

printf "\e[33;1m%s\e[0m\n" 'Finished running unit tests'

